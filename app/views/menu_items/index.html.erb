<h1>Menu Items</h1>

<table>
  <thead>
    <tr>
    <% if @menu_items.present? %>
      <th>Dish Name</th>
      <th>Dish Description</th>
      <th>Dish Type</th>
      <th>Allergens</th>
      <th>Category</th>
      <th>Price</th>    
      <th colspan="3"></th>
    <% end %>  
    </tr>
  </thead>
  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.dish_name %></td>
        <td><%= menu_item.dish_description %></td>
        <td><%= menu_item.dish_type %></td>
        <td><%= menu_item.allergens %></td>
        <td><%= menu_item.Category %></td>
        <td><%= menu_item.Price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Upload CSV', new_menu_item_path, class: 'btn btn-primary' %>